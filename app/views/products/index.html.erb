<div class="jumbotron">
  <div class="container">
    <h1>Full Inventory</h1>
    <p>Please see the listing below to view Chicago's best microbrews!</p>
    <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 col-sm-6 list-view">
        <div class="thumbnail">
          <h4><a href="/products/<%= product.id %>"><%= product.name %></a></h4>
          <h5><%= product.supplier.name %></h5>
          <h5>$ <%= product.price %></h5>
          <p>Images:</p>
          <% product.images.each do |image| %>
            <%= image_tag image.url, class: "img-responsive product-image" %>
          <% end %>
          <h5><a data-confirm="Are you sure?" data-method="delete" href="/products/<%= product.id %>" rel="nofollow">Delete</a></h5>
        </div>
      </div>
      <% end %>
  </div>
</div>

<%= link_to "Add a new beer to the inventory", "/products/new" %>